<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.clientv1.SignUpActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_LastName_SignUp"
        android:layout_alignBottom="@+id/editText_Email_Signup"
        android:layout_alignLeft="@+id/editText_Email_Signup"
        android:layout_alignStart="@+id/editText_Email_Signup"
        android:layout_marginBottom="61dp"
        android:hint="Last Name"
        android:fontFamily="casual" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/button_SignUp"
        android:fontFamily="casual"
        android:textSize="24sp"
        android:layout_below="@+id/editText_Password_SignUp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=" "
        android:ems="10"
        android:id="@+id/editText_FirstName_SignUp"
        android:hint="First Name"
        android:layout_marginBottom="18dp"
        android:fontFamily="casual"
        android:layout_above="@+id/editText_LastName_SignUp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/editText_Password_SignUp"
        android:hint="Password"
        android:fontFamily="casual"
        android:layout_below="@+id/editText_Email_Signup"
        android:layout_alignLeft="@+id/editText_FirstName_SignUp"
        android:layout_alignStart="@+id/editText_FirstName_SignUp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_Email_Signup"
        android:hint="Email"
        android:fontFamily="casual"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText_Password_SignUp"
        android:layout_alignStart="@+id/editText_Password_SignUp" />

    <TextView
        android:text="Enter your details please:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText_FirstName_SignUp"
        android:layout_alignStart="@+id/editText_FirstName_SignUp"
        android:layout_marginTop="24dp"
        android:id="@+id/textView2"
        android:fontFamily="casual"
        android:textSize="20sp" />
</RelativeLayout>
